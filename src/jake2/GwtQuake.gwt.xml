<module rename-to="gwtquake">
  <inherits name="com.google.gwt.user.User"/>
  <inherits name="com.google.gwt.corp.Runtime"/>

  <source path='Globals.java'/>

  <source path='client'/>
  <source path='game'/>
  <source path='gwt/client'/>
  <source path='qcommon'/>
  <source path='render'/> 
  <source path='server'/>
  <source path='sound'/>
  <source path='sys'/>
  <source path='util'/>

  <super-source path='emul' />

  <entry-point class="jake2.gwt.client.GwtQuake"/>

  <!-- There's no need to compile multiple user agents.
       It only works on WebKit at present, and it's unlikely to need any gecko-
       specific hacks. -->
  <set-property name='user.agent' value='safari'/>
</module>
